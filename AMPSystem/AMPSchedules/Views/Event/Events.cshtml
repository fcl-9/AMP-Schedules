@section scripts
{
    @Scripts.Render("~/Scripts/moment-with-locales.min.js")
    @Scripts.Render("~/scripts/javascript/functions.js")
    <script>
        var currentEvent = null;
        $(function () {

            $('div.segmented-control a').on('click', function () {

                $('div.segmented-control a').each(function (i, e) {
                    $(e).removeClass('active');
                });

                $(this).addClass('active');
                $(this).find('input').prop('checked', true);
                return false;

            });

        });

        function changeFunc($i) {
            $("#NextEvent").html("");
            $("#FutureEvents").html("");
           
            requestEvents(printInformation, $i);
        }

        $().ready(function () {   
            requestEvents(printInformation, 1);
            $("#eventLimit .tab").click(function (e) {
                $(e.target).tab("show");
                changeFunc($(e.target).html().replace(/[^\d.]/g, ''));
            });
            requestTeachers(printInformation, 1);
            $("body").on("click", ".glyphicon", function () {
                var event = $(this).parent.find("input[type = hidden]").val();
                renderEventModal(event);
            });
        });
        function addDays(date, days) {
            var result = new Date(date);
            result.setDate(result.getDate() + parseInt(days));
            return result;
        }
        //Ajax Request for teachers
        function requestEvents(returnFunction, DaysFilter) {
            
            var data = {};
            var DateInicial = new Date();
            var DateFinal = new Date();
            var hh = DateInicial.getHours();
            var mm = DateInicial.getMinutes();
            var ss = DateInicial.getSeconds();
            if (hh < 10) { hh = "0" + hh; }
            if (mm < 10) { mm = "0" + mm; }
            if (ss < 10) { ss = "0" + ss; }
            DateFinal = moment(addDays(DateInicial, DaysFilter - 1)).format("YYYY-MM-DD");
            DateInicial = moment(DateInicial).format("YYYY-MM-DD");
            $.ajax({
                type: "GET",
                url: '/Event/ReturnEvents?start=' + DateInicial + 'T'+hh+':'+mm+':'+ss+'&end=' + DateFinal+'T23:53:53',
                data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: returnFunction,
                failure: function(response) {
                    console.log("Fail");
                    alert(response.d);
                }
            });
        }
        //Adds Information to the page
        function printInformation(events) {
            console.log(events);
            var ClassName = undefined;
            var StartingTime = undefined;
            var ClassRoom = undefined;
            var Floor = undefined;
            var Color = undefined;
            var iteration = 0;
            $.each(sortBy(events, { prop: "StartTime" }),
                function(key, value) { 
                    $.each(value.Courses,
                        function (chave, valor) {
                            console.log(value);
                            ClassName = value.Name;
                            StartingTime = value.StartTime;
                            Color = value.Color;

                            $.each(value.Rooms,
                                function(property, val) {
                                    ClassRoom = val.Name;
                                    Floor = val.Floor;
                                });
                        });
                    iteration += 1;
                    if (iteration == 1) {
                        renderNextEvent(ClassName, StartingTime, ClassRoom, Floor, Color);
                    } else
                    {
                        renderFutureEvent(ClassName, StartingTime, ClassRoom, Floor, Color);
                    }

                });
        }

        function renderNextEvent(ClassName, StartingTime, ClassRoom, Floor, Color) {
            $('.NextEvent').append(
                '<div class="panel-group">' +
                '<div class="panel panel-primary" style="background:'+Color+'">' +
                '<div class="panel-body">' +
                '<h5>' +
                ClassName +
                '</h5>' +
                '<br/>' +
                '<p>Inicio: ' +
                StartingTime +
                ' H</p>' +
                '<p>' +
                ClassRoom +
                '</p>' +
                '<p>Piso: ' +
                Floor +
                '</p>' +
                '</div>' +
                '</div>' +
                '</div>'
            );

        }
        function renderFutureEvent(ClassName, StartingTime, ClassRoom, Floor, Color) {
            $('#FutureEvents').append(
                '<div class="panel-group">' +
                '<div class="panel panel-primary" style="background:' + Color + '">' +
                '<div class="panel-body">' +
                '<span class="glyphicon glyphicon-cog" aria-hidden="true"></span>' +
                '<h5>' +
                ClassName +
                '</h5>' +
                '<br/>' +
                '<p>Inicio: ' +
                StartingTime +
                ' H</p>' +
                '<p>' +
                ClassRoom +
                '</p>' +
                '<p>Piso: ' +
                Floor +
                '</p>' +
                '</div>' +
                '</div>' +
                '</div>' +
                '</div>' +
                '</div>'
            );

        }
     
        var sortBy = (function() {

            const _defaults = {
                parser: (x) => x,
                desc: false
            };
            const isObject = (o) => o !== null && typeof o === "object";
            const isDefined = (v) => typeof v !== "undefined";

            //gets the item to be sorted
            function getItem(x) {
                const isProp = isObject(x) && isDefined(x[this.prop]);
                return this.parser(isProp ? x[this.prop] : x);
            }

            return function(array, options) {
                if (!(array instanceof Array) || !array.length)
                    return [];
                const opt = Object.assign({}, _defaults, options);
                opt.desc = opt.desc ? -1 : 1;
                return array.sort(function(a, b) {
                    a = getItem.call(opt, a);
                    b = getItem.call(opt, b);
                    return opt.desc * (a < b ? -1 : +(a > b));
                });
            };

        }());
    </script>

}
   

